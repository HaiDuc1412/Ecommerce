							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"customerEmail\": \"customer@example.com\",\n  \"customerName\": \"John Doe\",\n  \"customerPhone\": \"0123456789\",\n  \"shippingAddress\": \"123 Main Street, Hanoi, Vietnam\",\n  \"paymentMethod\": \"COD\",\n  \"notes\": \"Please deliver between 9 AM - 5 PM\"\n}"
						},
