		{
			"name": "Orders",
			"item": [
				{
					"name": "Create Order (Checkout)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.trackingCode) {",
									"        pm.environment.set(\"tracking_code\", jsonData.data.trackingCode);",
									"        console.log(\"Tracking Code saved:\", jsonData.data.trackingCode);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Session-Id",
